  <section id="faq" class="py-24 bg-stone-100">
    <div class="container mx-auto px-6 max-w-3xl">
      <h2 class="font-display text-4xl text-center mb-16 text-slate-900 reveal">Common Questions</h2>
      <div class="space-y-6">
        <div class="faq-item border-b border-stone-300 reveal cursor-pointer group" onclick="toggleFaq(this)">
          <div class="flex justify-between items-center py-5">
            <div class="flex items-center gap-6">
                <span class="text-gold-400 font-display text-xl">01</span>
                <h4 class="font-display text-xl text-slate-900 group-hover:text-gold-400 transition-colors">What is a deposit bond?</h4>
